generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./appointments.db"
}

model Appointment {
  id           String   @id @default(cuid())
  name         String
  email        String
  phone        String?
  date         String
  time         String
  eventId      String   @unique
  calendarLink String?
  description  String?
  status       String   @default("scheduled") // scheduled, cancelled, completed
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([date, time])
  @@index([eventId])
  @@index([status])
}
